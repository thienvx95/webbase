{
  "name": "nodejswebapp",
  "version": "0.1.0",
  "description": "Nodejs Typescript",
  "author": "Thien Vu",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "rimraf dist",
    "debug": "npm run build && npm run watch-debug",
    "serve-dev": "set NODE_ENV=development && node -r tsconfig-paths/register dist/app.js ",
    "serve-prod": "set NODE_ENV=production && node -r tsconfig-paths/register dist/app.js ",
    "serve-debug-dev": "set NODE_ENV=development && nodemon --trace-warnings --inspect dist/app.js",
    "start": "ts-node-dev -r tsconfig-paths/register src/app.ts",
    "start:debug": "ts-node-dev -r --inspect=4321 tsconfig-paths/register src/app.ts",
    "prebuild": "npm run lint",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json && tsc-alias -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\"  -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-ts-alias\" \"npm run serve-debug-dev\"",
    "watch-node": "nodemon --trace-warnings --inspect dist/app.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch-ts-alias": "tsc-alias -w",
    "watch": "concurrently -k -p \"[{name}]\"  -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-ts-alias\" \"npm run watch-node\"",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch",
    "create-migration": "node src/script/create-mongo-migration.js"
  },
  "dependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@bull-board/express": "^4.10.1",
    "@typegoose/typegoose": "^11.4.0",
    "app-root-path": "^3.1.0",
    "aws-sdk": "^2.1435.0",
    "bcrypt": "^5.1.0",
    "bluebird": "^3.7.2",
    "bull": "^4.11.2",
    "bullmq": "^4.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^4.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "event-dispatch": "^0.4.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^6.9.0",
    "express-status-monitor": "^1.3.4",
    "express-useragent": "^1.0.15",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "migrate-mongo": "^10.0.0",
    "moment": "^2.29.4",
    "mongo-cursor-pagination": "^8.1.3",
    "mongoose": "^7.4.2",
    "mongoose-paginate-ts": "^1.3.1",
    "mongoose-unique-validator": "^4.0.0",
    "morgan": "^1.10.0",
    "path-to-regexp": "^6.2.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.32.4",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-sentry-log": "^1.0.26"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/glob": "^8.0.0",
    "@types/jest": "~29.1",
    "@types/lodash": "^4.14.187",
    "@types/migrate-mongo": "^8.2.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.18.11",
    "@typescript-eslint/eslint-plugin": "~5.39",
    "@typescript-eslint/parser": "~5.39",
    "concurrently": "^7.6.0",
    "eslint": "~8.24",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~27.1",
    "jest": "~29.1",
    "prettier": "~2.7",
    "rimraf": "~3.0",
    "ts-jest": "~29.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.0",
    "tsutils": "~3.21",
    "typescript": "~4.8"
  },
  "engines": {
    "node": ">= 16.13"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
    "ext": "ts, js"
  }
}
